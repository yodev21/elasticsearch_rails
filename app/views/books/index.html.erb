<h1>書籍一覧</h1>
<p><%= current_user.email %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>ユーザーID</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.content %></td>
      <td><%= book.users.email %></td>
    </tr>
  <% end %>
</table>

<%= link_to '新規作成',new_book_path %>
